# Ralph Configuration - My Digital Invoice Website
# Project-specific settings for Ralph autonomous development

# Maximum API calls per hour (default: 100)
MAX_CALLS_PER_HOUR=100

# Rate limiting
RATE_LIMIT_DELAY=2

# Circuit breaker settings
CB_NO_PROGRESS_THRESHOLD=3
CB_SAME_ERROR_THRESHOLD=5

# Claude Code allowed tools
# Static website - limited to file operations
ALLOWED_TOOLS="Write,Read,Edit,Glob,Grep,Bash(python -m http.server *),Bash(git *)"

# Project type
PROJECT_TYPE="static-website"

# Session continuity
CLAUDE_USE_CONTINUE=true
